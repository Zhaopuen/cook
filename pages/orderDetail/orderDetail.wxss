/* pages/orderDetail/orderDetail.wxss */
.order_detail{
  width:100%;
  height:auto;
  overflow: hidden; 
  background:#EAF8F8;
  padding-bottom: 130rpx;
}
.order_detailList{
  width:86%;
  height:auto;
  overflow: hidden;
  background:#fff;
  margin:30rpx auto 30rpx;
  border-radius:40rpx;
  padding:3%;
}
.all_list_header{
  /* width:90%; */
  height:auto;
  overflow: hidden;
  margin:0 auto;
  padding:20rpx 0rpx;
  border-bottom:1px solid #f0f0f0;
}
.all_list_header .all_list_num{
  width:48rpx;
  height:48rpx;
  border-radius:50%;
  border:5rpx solid #AFE5E2;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  color:#35BDB6;
  float:left;
  margin-right: 20rpx;
}
.all_list_header .all_list_name{
  color:#aaaaaa;
  font-size: 30rpx;
  line-height: 52rpx;
  float:left;
}
.all_list_header .all_list_time{
  color:#aaaaaa;
  font-size: 30rpx;
  float:right;
}

.order_detailCon{
  width:100%;
  height:auto;
  overflow: hidden;
  border-bottom:1px solid #f0f0f0;
}
.order_listImg{
  width:100%;
  height:auto;
  overflow: hidden;
  margin:40rpx 0;
}
.order_listImg image{
  width:180rpx;
  height:180rpx;
  float:left;
  border-radius:40rpx;
  margin-right: 30rpx;
}
.order_text{
  height:auto;
  overflow: hidden;
  float:left;
}
.order_text text{
  display: block;
  color:#666;
  font-size:34rpx;
  line-height:60rpx;
}
.order_text span{
  display: block;
  color:#666;
  font-size: 34rpx;
}
.order_listPrice{
  float:right;
  color:#666;
  font-size: 34rpx;
}

.order_listFooter{
  width:100%;
  height:auto;
  overflow:hidden;
}
.orderList_total{
  width:100%;
  height:auto;
  overflow: hidden;
  line-height: 100rpx;
}
.orderList_total text{
  color:#666;
  font-size:36rpx;
  float:left;
}
.orderList_total span{
  color:#666;
  font-size: 36rpx;
  float:right;
}
.orderList_beizhu{
  color:#ff6204;
  font-size: 30rpx;
  line-height: 60rpx;
}

/* 剩余时间 */
.order_times{
  width:95%;
  height:auto;
  overflow: hidden;
  margin:0 auto;
  padding:100rpx 0;
  border-bottom:1px solid #e0e0e0;
}
.order_times text{
  color:#35bdb6;
  font-size: 55rpx;
  line-height: 60rpx;
  text-align: center;
  display: block;
}
.order_times p{
  display: block;
  text-align: center;
  color:#444444;
  font-size: 35rpx;
  line-height: 60rpx;
}

/* 订单编号 */
.order_numbers{
  width:95%;
  margin:0 auto;
  height:auto;
  overflow: hidden;
  line-height: 100rpx;
  font-size: 32rpx;
}
.order_numbers text{
  display: block;
  float:left;
  color:#aaaaaa;
}
.order_numbers span{
  display:block;
  float:right;
  color:#aaaaaa;
}

/* 取餐 */
.footer_button{
  width:100%;
  height:120rpx;
  text-align: center;
  line-height: 120rpx;
  position: fixed;
  bottom:0;
}
.footer_button span{
  display: block;
  width:50%;
  height:100%;
  font-size: 35rpx;
}
.footer_button span:nth-of-type(1){
  background:#fff;
  color:#35bdb6;
  float:left;
}
.footer_button span:nth-of-type(2){
  background:#35bdb6;
  color:#fff;
  float:right;
}

/* 遮罩层 */
.maskBox{
  width:100%;
  height:100%;
  position: fixed;
  top:0;
  z-index:99999;
  margin:auto;
  left:0; 
  right:0;
  bottom:0;
  background:rgba(0,0,0,0.4);
}
.maskMiddle{
  width:85%;
  height:auto;
  max-height:70%;
  overflow-y:auto;
  background:#fff;
  border-radius:30rpx;
  padding:3%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.maskMid_Img{
  width:100%;
  height:auto;
  overflow: hidden;
  margin:0 auto;
}
.maskMid_Img image{
  display: block;
  width:120rpx;
  height:120rpx;
  margin:50rpx auto 30rpx;
}
.maskMid_Img text{
  color:#35bdb6;
  font-size: 40rpx;
  display: block;
  text-align: center;
  margin:0 0 40rpx;
}
.maskMid_Img p{
  color:#666;
  text-align: center;
  display: block;
  margin:0 40rpx 40rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}
.maskButton{
  width:100%;
  height:auto;
  overflow: hidden;
  padding-bottom: 60rpx;
}
.maskButton text{
  display: block;
  width:45%;
  margin:0 2%;
  height:100rpx;
  line-height:100rpx;
  text-align: center;
  border-radius:60rpx;
}
.maskButton text:nth-of-type(1){
  border:1px solid #e0e0e0;
  background: #fff;
  color:#666;
  float:left;
}
.maskButton text:nth-of-type(2){
  background: #35bdb6;
  color:#fff;
  float:left;
}